<h1>User info</h1>
<p>name</p>
<p>introduction</p>



<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  
  
  
<h1>Books</h1>
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

<% @books.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <td><%= link_to "@book.id", book_path(book.id) %></td>
  <td><%= book.body %></td>
  <% end %>
</div>

  
  