<div class="container px-5 px-sm-0"> 
<div class="row"> 


<div class="col-md-3">




 <h2>User info</h2>
   <table class="table">
     <% if current_user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    <thead>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </thead>
   </table>
  
  <div class="row">
    <a class="btn btn-outline-secondary btn-block", href="edit_user_path(current_user)" %></a>
  </div>


  <h2>New book</h2>
    <%= form_with model: @new_book do |f| %>
      <h4>Title</h4>
       <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
     <%= f.submit 'Create Book' %>
     <% end %>
  
  

  
<table class="table table-striped">
  
<h2>Users</h2>


 <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  
  
<% @users.each do |user| %>
<div>
  <td>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  </td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user.id) %></td>
</div>
<% end %>

 </table> 
 
 
 
</div>

</div>
</div>