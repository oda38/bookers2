<div>
  <%= flash[:notice] %>
</div>


<h1>User info</h1>
<p></p>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  


<h1>Book detail</h1>

<div>
  <%= image_tag @book.get_image %>
  <p><%= @book.user.name %></p>
  <p><%= link_to @book.id, books_path %></p>
  <p><%= @book.body %></p>
  <p><%= link_to "Edit", edit_book_path(@book.id) %></p>
  <% if @book.user == current_user %>
   <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
  <% end %>
</div>
