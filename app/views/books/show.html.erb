<!-- books/id -->

<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0"> 
<div class="row"> 


<div class="col-md-3">



 <h2>User info</h2>
  <table class="table">
     <% if current_user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    <thead>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </thead>
   </table>
  
  <div class="row">
    <a class="btn btn-outline-secondary btn-block", href="edit_user_path(current_user)" %></a>
  </div>

 

<h2>New book</h2>
  <%= form_with model: @new_book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  


<h2>Book detail</h2>

<div>
  <td>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  </td>
  <p><%= @user.name %></p>
  <p><%= link_to @book.title, books_path %></p>
  <p><%= @book.body %></p>
  <p><%= link_to "Edit", edit_book_path(@book.id) %></p>
  <% if @book.user == current_user %>
   <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
  <% end %>
</div>


</div>

</div>
</div>