<!-- books(複数ユーザーが投稿したブック一覧) -->

<div class="container px-5 px-sm-0"> 
<div class="row"> 


<div class="col-md-3">

  <h2>User info</h2>
   <table class="table">
     <% if current_user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    <thead>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </thead>
   </table>
  
  <div class="row">
    <a class="btn btn-outline-secondary btn-block", href="edit_user_path(current_user)" %></a>
  </div>


 <h2 class="mt-3">New book</h2>
   <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  
  
<div class="col-md-8 offset-md-1"> 
  
 <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <% @books.each do |book| %>
 <div>
  <td>
  <% if book.user.profile_image.attached? %>
    <%= image_tag book.user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  </td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  <% end %>
 </div>
 
   </table>


</div>


</div>

</div>
</div>