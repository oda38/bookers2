<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'update' %>
  
  <p>
  <%= link_to "show", books_path(@book.id) %> | <%= link_to "Back",books_path %>
  </p>

  
<% end %>